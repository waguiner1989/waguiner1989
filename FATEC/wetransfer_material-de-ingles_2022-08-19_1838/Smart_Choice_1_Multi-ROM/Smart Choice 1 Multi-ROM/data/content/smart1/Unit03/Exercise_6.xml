<?xml version="1.0" encoding="utf-8"?>
<exercise templateType="9" styleSheet="../stylesheets/T9_style.xml">
	<title><![CDATA[Food (2)]]></title>
	<rubric><![CDATA[<b>Watch the video. Read the sentences. Click on the correct names to make true sentences.</b>]]></rubric>
	<video>content/smart1/video/L1U03_FINAL_LAN.swf</video>
	<questions>
		<question>
			<sentence><![CDATA[______ really likes Japanese food.]]></sentence>
			<options>
				<option>Alan</option>
				<option>Julianna</option>
				<option answer="correct">Megumi</option>
				<option>Sahil</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[Andrina and ______ like pizza.]]></sentence>
			<options>
				<option>Alan</option>
				<option>Julianna</option>
				<option>Megumi</option>
				<option answer="correct">Sahil</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ loves juicy fruit.]]></sentence>
			<options>
				<option answer="correct">Alan</option>
				<option>Andrina</option>
				<option>Megumi</option>
				<option>Sahil</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[One of ______'s favorite foods is Mexican.]]></sentence>
			<options>
				<option>Andrina</option>
				<option answer="correct">Julianna</option>
				<option>Megumi</option>
				<option>Sahil</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ doesn't like potatoes.]]></sentence>
			<options>
				<option answer="correct">Alan</option>
				<option>Andrina</option>
				<option>Julianna</option>
				<option>Megumi</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ and Andrina don't like meat because they are vegetarians.]]></sentence>
			<options>
				<option>Alan</option>
				<option answer="correct">Julianna</option>
				<option>Megumi</option>
				<option>Sahil</option>
			</options>
		</question>
	</questions>
</exercise>
