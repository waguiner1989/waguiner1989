<?xml version="1.0" encoding="utf-8"?>
<exercise templateType="9" styleSheet="../stylesheets/T9b_style.xml">
	<title><![CDATA[My best vacation (2)]]></title>
	<rubric><![CDATA[<b>Watch the video. Read the questions. Click on the correct answers.</b>]]></rubric>
	<video>content/smart1/video/L1U11_FINAL_LAN.swf</video>
	<questions>
		<question>
			<sentence><![CDATA[Where did Sahil go on his best vacation?]]></sentence>
			<options>
				<option>To the beach.</option>
				<option>To the city.</option>
				<option answer="correct">To the mountains.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[What did Sahil do on vacation?]]></sentence>
			<options>
				<option>He ate good food.</option>
				<option>He sang.</option>
				<option answer="correct">He went camping.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[Where did Yi-Lin go last spring?]]></sentence>
			<options>
				<option answer="correct">To Barcelona.</option>
				<option>To Chicago.</option>
				<option>To Minneapolis.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[When was Gabby's best vacation?]]></sentence>
			<options>
				<option>In 2003.</option>
				<option>In 2004.</option>
				<option answer="correct">In 2005.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[How did Gabby get to Minneapolis?]]></sentence>
			<options>
				<option answer="correct">By car.</option>
				<option>By plane.</option>
				<option>By train.</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[Who did Garry go on vacation with?]]></sentence>
			<options>
				<option answer="correct">His best friend.</option>
				<option>His girlfriend.</option>
				<option>His parents.</option>
			</options>
		</question>
	</questions>
</exercise>
