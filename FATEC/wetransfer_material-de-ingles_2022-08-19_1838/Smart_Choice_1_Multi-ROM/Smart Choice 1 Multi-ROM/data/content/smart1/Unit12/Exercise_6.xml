<?xml version="1.0" encoding="utf-8"?>
<exercise templateType="9" styleSheet="../stylesheets/T9_style.xml">
	<title><![CDATA[Future plans (2)]]></title>
	<rubric><![CDATA[<b>Watch the video. Read the sentences. Click on the correct names to make true sentences.</b>]]></rubric>
	<video>content/smart1/video/L1U12_FINAL_LAN.swf</video>
	<questions>
		<question>
			<sentence><![CDATA[______ is going to be a journalist.]]></sentence>
			<options>
				<option>Ellie</option>
				<option answer="correct">Enrico</option>
				<option>Julianna</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______'s husband is going to go to medical school.]]></sentence>
			<options>
				<option answer="correct">Ellie</option>
				<option>Julianna</option>
				<option>Megumi</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[Julianna and _______ are going to move to New York.]]></sentence>
			<options>
				<option>Enrico</option>
				<option>Megumi</option>
				<option answer="correct">Tommy</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ is going to be a doctor.]]></sentence>
			<options>
				<option>Julianna</option>
				<option answer="correct">Megumi</option>
				<option>Tommy</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ is going to be a lawyer.]]></sentence>
			<options>
				<option>Enrico</option>
				<option answer="correct">Julianna</option>
				<option>Megumi</option>
			</options>
		</question>
		<question>
			<sentence><![CDATA[______ is probably going to be a waiter.]]></sentence>
			<options>
				<option>Enrico</option>
				<option answer="correct">Tommy</option>
				<option>Ellie's husband</option>
			</options>
		</question>
	</questions>
</exercise>
